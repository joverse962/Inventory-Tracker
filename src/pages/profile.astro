---
import BaseLayout from '../layouts/BaseLayout.astro';

// Sample user data
const user = {
  name: 'John Doe',
  email: 'john.doe@example.com',
  department: 'IT Department',
  joinDate: '2024-01-15'
};

// Sample borrowed items
const borrowedItems = [
  { 
    id: 2,
    name: 'Epson Projector', 
    status: 'borrowed', 
    borrowedDate: '2026-02-10',
    dueDate: '2026-02-17',
    photo: 'https://images.unsplash.com/photo-1559827260-dc66d52bef19?w=400'
  },
];

// Sample borrowing history
const borrowHistory = [
  {
    itemName: 'Dell Laptop',
    borrowedDate: '2026-01-15',
    returnedDate: '2026-01-22',
    duration: '7 days'
  },
  {
    itemName: 'Wireless Mouse',
    borrowedDate: '2026-01-10',
    returnedDate: '2026-01-12',
    duration: '2 days'
  },
  {
    itemName: 'HDMI Cable',
    borrowedDate: '2025-12-20',
    returnedDate: '2026-01-05',
    duration: '16 days'
  },
];
---

<BaseLayout>
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-6">üë§ My Profile</h2>

    <!-- User Info Card -->
    <div class="bg-white p-6 rounded-lg shadow mb-6">
      <div class="flex items-start gap-6">
        <div class="w-24 h-24 bg-blue-500 rounded-full flex items-center justify-center text-white text-3xl font-bold">
          {user.name.split(' ').map(n => n[0]).join('')}
        </div>
        <div class="flex-1">
          <h3 class="text-2xl font-bold mb-2">{user.name}</h3>
          <p class="text-gray-600 mb-1">üìß {user.email}</p>
          <p class="text-gray-600 mb-1">üè¢ {user.department}</p>
          <p class="text-gray-600">üìÖ Joined: {user.joinDate}</p>
        </div>
        <button class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition">
          ‚úèÔ∏è Edit Profile
        </button>
      </div>
    </div>

    <!-- Currently Borrowed Items -->
    <div class="bg-white p-6 rounded-lg shadow mb-6">
      <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
        <span>üì§</span>
        <span>Currently Borrowed Items ({borrowedItems.length})</span>
      </h3>
      
      {borrowedItems.length > 0 ? (
        <div class="space-y-4">
          {borrowedItems.map(item => (
            <div class="flex items-center gap-4 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
              <img 
                src={item.photo} 
                alt={item.name} 
                class="w-20 h-20 object-cover rounded"
              />
              <div class="flex-1">
                <h4 class="font-semibold text-lg">{item.name}</h4>
                <p class="text-sm text-gray-600">Borrowed: {item.borrowedDate}</p>
                <p class="text-sm text-yellow-700 font-medium">Due: {item.dueDate}</p>
              </div>
              <button class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition">
                ‚Ü©Ô∏è Return
              </button>
            </div>
          ))}
        </div>
      ) : (
        <p class="text-gray-500 text-center py-8">No items currently borrowed</p>
      )}
    </div>

    <!-- Borrowing History -->
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
        <span>üìú</span>
        <span>Borrowing History</span>
      </h3>
      
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Item</th>
              <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Borrowed Date</th>
              <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Returned Date</th>
              <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Duration</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            {borrowHistory.map((record, index) => (
              <tr class={index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}>
                <td class="px-4 py-3 text-sm">{record.itemName}</td>
                <td class="px-4 py-3 text-sm">{record.borrowedDate}</td>
                <td class="px-4 py-3 text-sm">{record.returnedDate}</td>
                <td class="px-4 py-3 text-sm">{record.duration}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-3 gap-4 mt-6">
      <div class="bg-gradient-to-br from-blue-500 to-blue-600 text-white p-6 rounded-lg shadow">
        <p class="text-sm opacity-90">Total Borrowed</p>
        <p class="text-3xl font-bold mt-2">{borrowHistory.length + borrowedItems.length}</p>
      </div>
      <div class="bg-gradient-to-br from-green-500 to-green-600 text-white p-6 rounded-lg shadow">
        <p class="text-sm opacity-90">Currently Borrowed</p>
        <p class="text-3xl font-bold mt-2">{borrowedItems.length}</p>
      </div>
      <div class="bg-gradient-to-br from-purple-500 to-purple-600 text-white p-6 rounded-lg shadow">
        <p class="text-sm opacity-90">Total Returns</p>
        <p class="text-3xl font-bold mt-2">{borrowHistory.length}</p>
      </div>
    </div>
  </div>
</BaseLayout>
